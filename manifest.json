{
  "name": "Snailman",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "package tracker chrome extension",
  "background": { "scripts": ["main.js"] },
  "browser_action": {
    "default_icon": {
      "19": "images/package.png"
    },
    "default_title": "package tracker",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "<all_urls>",
    "storage"
  ]
}
